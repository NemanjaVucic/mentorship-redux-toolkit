{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mentorship/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@mentorship/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@mentorship/shared/variables": ["libs/shared/variables/src/index.ts"],
      "@mentorship/storybook-host": ["libs/storybook-host/src/index.ts"],
      "@mentorship/storybook-host-react": ["libs/storybook-host-react/src/index.ts"],
      "@mentorship/storybook-host-shared": ["libs/storybook-host-shared/src/index.ts"],
      "@mentorship/storybook-host-users": ["libs/storybook-host-users/src/index.ts"],
      "@mentorship/users/data-access": ["libs/users/data-access/src/index.ts"],
      "@mentorship/users/features": ["libs/users/features/src/index.ts"],
      "@mentorship/users/pages": ["libs/users/pages/src/index.ts"],
      "@mentorship/users/router": ["libs/users/router/src/index.ts"],
      "@mentorship/users/server": ["libs/users/server/src/index.ts"],
      "@mentorship/users/shared": ["libs/users/shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
